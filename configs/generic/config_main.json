{
  "project": "Generic Test Framework",
  "modes": {
    "system_test": {
      "type": "infinite",
      "sequential": ["touch", "rgb", "backlight"],
      "parallel": ["eth", "wifi"]
    },
    "pcba_test": {
      "type": "infinite",
      "sequential": ["rgb", "touch", "backlight"],
      "parallel": ["wifi", "eth"]
    },
    "burnin_test": {
      "type": "timed",
      "sequential": [],
      "parallel": ["wifi", "eth", "rgb"]
    }
  },
  "global_params": {
    "LOG_SERVER_IP": "192.168.1.100",
    "LOG_SERVER_PORT": "8080"
  },
  "defaults": {
    "log_to_console": true,
    "log_to_file": true,
    "platform_hooks": true
  },
  "tests": {
    "rgb": {
      "script": "tests/rgb.sh",
      "enabled": true,
      "manual": true,
      "params": { "RGB_DURATION": "2" }
    },
    "touch": {
      "script": "tests/touch.sh",
      "enabled": true,
      "manual": true
    },
    "wifi": {
      "script": "tests/wifi.sh",
      "enabled": true,
      "manual": false,
      "params": {
        "AP_SSID": "FactoryAP",
        "AP_PASS": "12345678",
        "MAC_ADDR": "00:11:22:33:44:55"
      }
    },
    "eth": {
      "script": "tests/eth.sh",
      "enabled": true,
      "manual": false,
      "params": {
        "INTERFACE": "eth0",
        "TARGET_IP": "192.168.0.1"
      }
    }
  }
}
